%p#notice= notice

%h1
  = @style.name

%ul.small-block-grid-4
  - @style.units.each do |unit|
    %li
      %p
        = unit.name
      %a.th{href: "#{style_unit_path(@style, unit.id)}"}
        = image_tag unit.image_url(:small).to_s

%ul.button-group
  %li
    = link_to 'Back', styles_path, class: 'button secondary'
  %li
    = link_to 'Edit', edit_style_path(@style), class: 'button'
  %li
    = link_to 'Добавить объект', new_style_unit_path(style_id: @style.id), class: 'button success'
  %li
    = link_to 'Добавить стиль', new_style_path, class: 'button success'
